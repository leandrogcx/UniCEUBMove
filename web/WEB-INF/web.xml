<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>ProgramarCarona</servlet-name>
        <servlet-class>servlets.ProgramarCarona</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PesquisarCarona</servlet-name>
        <servlet-class>servlets.PesquisarCarona</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EscolherCarona</servlet-name>
        <servlet-class>servlets.EscolherCarona</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CaronasProgramadas</servlet-name>
        <servlet-class>servlets.CaronasProgramadas</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProgramarCarona</servlet-name>
        <url-pattern>/ProgramarCarona</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PesquisarCarona</servlet-name>
        <url-pattern>/PesquisarCarona</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EscolherCarona</servlet-name>
        <url-pattern>/EscolherCarona</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CaronasProgramadas</servlet-name>
        <url-pattern>/CaronasProgramadas</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
</web-app>
